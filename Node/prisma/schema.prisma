generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  email    String    @unique
  name     String
  password String
  role     Role      @default(USER)
  Booking  Booking[]
  Expense  Expense[]
}

model Booking {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  fromDate DateTime
  toDate   DateTime
  User     User     @relation(fields: [userId], references: [id])
  userId   String   @db.ObjectId
  amount   Int
  date     DateTime @default(now())

  @@unique([fromDate, toDate])
}

model Expense {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  note   String?
  amount Int
  date   DateTime 
  User   User     @relation(fields: [userId], references: [id])
  userId String   @db.ObjectId
}

enum Role {
  USER
  ADMIN
}
